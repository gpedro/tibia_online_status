{
  "manifest_version": 2,

  "name": "Tibia Online Status",
  "description": "This extension adds additional status information to the characters page.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [ "lib/jquery-2.1.1.min.js", "src/utils.js", "src/world_page.js", "src/chrome/background.js" ]
  },
  "content_scripts": [
    {
      "matches": [ "http://www.tibia.com/community/?subtopic=characters*" ],
      "js": [ "lib/jquery-2.1.1.min.js", "src/utils.js", "src/character_page.js", "src/chrome/characters.js" ]
    }
  ]
}
