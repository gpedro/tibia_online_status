{
  "manifest_version": 2,

  "name": "Tibia Online Status",
  "short_name": "TOS",
  "description": "__DESCRIPTION__",
  "version": "__VERSION__",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["src/utils.js", "src/world_page.js", "src/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://www.tibia.com/community/?subtopic=characters*"],
    "js": ["src/utils.js", "src/character_page.js", "src/characters.js"]
  }, {
    "matches": ["http://www.tibia.com/community/?subtopic=guilds*"],
    "js": ["src/utils.js", "src/guild_page.js", "src/guilds.js"]
  }, {
    "matches": ["http://www.tibia.com/community/?subtopic=highscores*"],
    "js": ["src/utils.js", "src/highscore_page.js", "src/highscores.js"]
  }]
}
