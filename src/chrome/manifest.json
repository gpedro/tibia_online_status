{
  "manifest_version": 2,

  "name": "Tibia Online Status",
  "short_name": "TOS",
  "description": "__DESCRIPTION__",
  "version": "__VERSION__",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["data/utils.js", "data/memory_storage.js", "data/world_page.js", "data/background.js"]
  },
  "content_scripts": [{
    "matches": ["http://www.tibia.com/community/?subtopic=characters*"],
    "js": ["data/chrome_page.js", "data/utils.js", "data/character_page.js", "data/characters.js"]
  }, {
    "matches": ["http://www.tibia.com/community/?subtopic=guilds*"],
    "js": ["data/chrome_page.js", "data/utils.js", "data/guild_page.js", "data/guilds.js"]
  }, {
    "matches": ["http://www.tibia.com/community/?subtopic=highscores*"],
    "js": ["data/chrome_page.js", "data/utils.js", "data/highscore_page.js", "data/highscores.js"]
  }]
}
